{
  "name": "agentmail",
  "description": "Inter-agent communication for tmux sessions. Send and receive messages between AI agents running in different tmux windows.",
  "version": "1.0.0",
  "author": {
    "name": "Konstantin Tumalevich",
    "email": "userad@gmail.com"
  },
  "repository": "https://github.com/UserAd/AgentMail",
  "license": "MIT",
  "homepage": "https://github.com/UserAd/AgentMail",
  "keywords": [
    "agent-communication",
    "tmux",
    "inter-agent",
    "messaging",
    "ai-workflow"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentmail status ready && agentmail onboard"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentmail status offline"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentmail status ready && agentmail receive --hook"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "agentmail status work"
          }
        ]
      }
    ]
  }
}
